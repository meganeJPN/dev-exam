<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.value %>円
</p>

<p>
  <strong>住所</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= @property.years %>年
</p>

<p>
  <strong>備考</strong>
  <%= @property.remarks %>
</p>
<hr>
<% @property.stations.each_with_index do |s,i|%>
  <h3>最寄り駅<%= i+1 %></h3>
  <p>
    <strong>路線名</strong>
    <%= s.routeName %>
  </p>
  <p>
    <strong>駅名</strong>
    <%= s.stationName %>
  </p>
   <p>
    <strong>徒歩分数</strong>
    <%= s.minutes %>
  </p>

<% end%>

